{% extends "AcmeThemesBundle::layout.html.twig" %}
{% block body %}
<div class="row"><!--1-->
        <div class="box col-md-12"><!--2-->
            <div class="row row-centered">
            <div class="box col-md-12 centered">
                <p class="center-block"> 
                   <a class="btn btn-primary btn-lg" href="{{ path('users_new') }}">
                        <i class="glyphicon glyphicon-cog"></i>
                        new
                    </a>
                 </p>   

             </div>
             </div>
                <div class="panel panel-primary">
                <div class="panel-heading">
                   <h3 class="panel-title"><i class="glyphicon glyphicon-user"></i> User list</h3>
                </div>
                <div class="panel-body"><!--4-->
                            <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
<thead>

        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Username</th>
            <!--<th>Employeeds</th>-->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.employed.name }}</td>
            <td>{{ entity.employed.surname }}</td>
            <td>{{ entity.employed.email }}</td>
            <td>{{ entity.username }}</td>
            <td class="center">
                                <!--<a class="btn btn-success" href="{{ path('users_show', { 'id': entity.id }) }}">
                                    <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                                    View
                                </a>-->
                                <a class="btn btn-info" href="{{ path('users_edit', { 'id': entity.id }) }}">
                                    <i class="glyphicon glyphicon-edit icon-white"></i>
                                    Edit
                                </a>
                                <a class="btn btn-danger" href="#">
                                    <i class="glyphicon glyphicon-trash icon-white"></i>
                                    Delete
                                </a>
                            </td>
        </tr>
    
    {% endfor %}
    </tbody>
</table>
       </div><!--end4-->
        </div><!--end3-->
        </div><!--/span--><!--end2-->
    </div><!--end1-->
{% javascripts
    '@AcmeThemesBundle/Resources/public/kinder/bower_components/bootstrap/dist/js/*'
    
    '@AcmeThemesBundle/Resources/public/kinder/js/jquery.dataTables.min.js'
    '@AcmeThemesBundle/Resources/public/kinder/js/dataTables.bootstrap.js'
    
    '@AcmeThemesBundle/Resources/public/kinder/ui/js/*'
    '@AcmeThemesBundle/Resources/public/kinder/js/kindergarten.js'
    
    %}

    <script src="{{ asset_url }}"></script>


{% endjavascripts %}

<script type="text/javascript">
    kindergarten.buildTable();
</script>
{% endblock %}