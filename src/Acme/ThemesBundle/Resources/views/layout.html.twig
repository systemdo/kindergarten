    <!-- The styles -->
    
    
    <link href="{{ asset('bundles/acmethemes/kinder/css/jquery.dataTables.min.css')}}" rel="stylesheet">
    <!--<link href="{{ asset('bundles/acmethemes/kinder/ui/css/jquery-ui.theme.css')}}" rel="stylesheet">-->
